<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="agriculture_plantations_history_tree" model="ir.ui.view">
        <field name="name">agri.plantation.history.tree</field>
        <field name="model">agri.plantation.history</field>
        <field name="arch" type="xml">
            <tree string="Plantations" create="0" delete="0">
                <field name="plant_id" readonly="1"/>
                <field name="farmer_id" readonly="1"/>
                <field name="date_from" readonly="1"/>
                <field name="date_to" readonly="1"/>
            </tree>
        </field>
  	</record>
  	
  	<record id="agriculture_plantations_history_form" model="ir.ui.view">
        <field name="name">agri.plantation.history.form</field>
        <field name="model">agri.plantation.history</field>
        <field name="arch" type="xml">
            <form string="Plantations" create="0" delete="0">
               	<group>
               		<group>
	                	<field name="plant_id" readonly="1"/>
	                	<field name="farmer_id" readonly="1"/>
                	</group>
                	
                	<group>
                		<field name="date_from" readonly="1"/>
	                	<field name="date_to"/>
                	</group>
                </group>
            </form>
        </field>
  	</record>

</odoo>
